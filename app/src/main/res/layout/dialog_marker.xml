<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogCon"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- android:padding="10dp"-->

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="820dp"
        android:layout_height="0dp"
        android:background="@drawable/launcher_background_darker"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flagImage"
        android:layout_width="400dp"
        android:layout_height="247dp"
        android:layout_above="@+id/descriptionTextBox"
        android:layout_alignParentStart="true"
        android:contentDescription="TODO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagName" />

    <TextView
        android:id="@+id/descriptionTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/riddleLabel"
        android:layout_centerHorizontal="true"
        android:text="@string/textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagImage"
        android:background="@drawable/text_view_style_settings"/>

    <TextView
        android:id="@+id/riddleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerTb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/riddleLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextBox"
        android:background="@drawable/text_view_style_settings"/>

    <EditText
        android:id="@+id/answerTb"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_above="@+id/solveRiddle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_view_style_settings"
        android:ems="10"
        android:hint="@string/answer"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/solveRiddle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riddleLabel" />

    <Button
        android:id="@+id/solveRiddle"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/answerTb"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_rounding_settings"
        android:text="@string/solve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerTb"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/flagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>